{
  "name": "ship-hold",
  "version": "1.0.0",
  "description": "data access framework for postgres sql",
  "main": "./src/shiphold.js",
  "scripts": {
    "test": "npm run test:unit && npm run test:int",
    "test:int": "node ./test/integrations/index.js",
    "test:unit": "node ./test/units/index.js",
    "test:ci": "DB_HOSTNAME=127.0.0.1 npm test",
    "babel": "babel src --out-dir dist -s",
    "doc":"concat-cli -f ./doc/*.md -o README.md",
    "build":"npm run babel && npm run doc"

  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zorro-del-caribe/ship-hold.git"
  },
  "keywords": [
    "postgresql",
    "postgres",
    "orm",
    "database",
    "model",
    "sql",
    "ship-hold"
  ],
  "engines": {
    "node": ">=6.0.0"
  },
  "author": "Laurent RENARD",
  "license": "MIT",
  "dependencies": {
    "debug": "^2.2.0",
    "pg": "^4.5.5",
    "ship-hold-querybuilder": "^1.0.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-preset-es2015": "^6.9.0",
    "concat-cli": "^4.0.0",
    "tape": "^4.5.1"
  }
}
